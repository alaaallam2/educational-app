<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context=".item4">
    <TextView
        android:id="@+id/type_quiz"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Quiz in the natural sciences"
        android:textSize="25sp"
        android:fontFamily="casual"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question1"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:layout_margin="10dp"
      android:layout_below="@+id/type_quiz"
        android:fontFamily="casual"
        android:text="What elements are involved in the composition of water?"        />
    <CheckBox
        android:id="@+id/checkbox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question1"
        />
    <TextView
        android:id="@+id/text1answer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:layout_below="@id/checkbox1"
        android:text="Na"/>
    <CheckBox
        android:id="@+id/checkbox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/checkbox1"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/question1"
        />

    <TextView
        android:id="@+id/text1answer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginLeft="90dp"
        android:layout_below="@id/checkbox2"
        android:text="co2"/>
    <CheckBox
        android:id="@+id/checkbox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/checkbox2"
        android:layout_below="@+id/question1"
        />
    <TextView
        android:id="@+id/text1answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/checkbox3"
        android:layout_marginLeft="160dp"
        android:text="Ca"/>
    <CheckBox
        android:id="@+id/checkbox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/checkbox3"
        android:layout_below="@+id/question1"
        />
    <TextView
        android:id="@+id/text1answer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/checkbox3"
        android:layout_marginLeft="230dp"
        android:text="K"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question2"
        android:layout_below="@+id/text1answer1"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:fontFamily="casual"
        android:text="What are the oldest types of science?"
        />
    <RadioGroup
        android:id="@+id/RadioGroub"
        android:orientation="horizontal"
        android:layout_below="@id/question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radio_button1"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question2"
            />
        <RadioButton
            android:id="@+id/radio_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/checkbox1"
            android:layout_marginLeft="90dp"
            android:layout_below="@+id/question2"
            />
        <RadioButton
            android:id="@+id/radio_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_toRightOf="@+id/checkbox2"
            android:layout_below="@+id/question2"
            />
    </RadioGroup>
    <TextView
        android:id="@+id/textanswer1"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_below="@id/RadioGroub"
        android:fontFamily="casual"
        android:layout_margin="10dp"
        android:text="Rock science"/>
    <TextView
        android:id="@+id/textanswer2"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_below="@id/RadioGroub"
        android:fontFamily="casual"
        android:layout_marginLeft="110dp"
        android:text="Chemistry"
        />
    <TextView
        android:id="@+id/textanswer3"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_below="@id/RadioGroub"
        android:fontFamily="casual"
        android:layout_marginLeft="250dp"
        android:text="Astronomy"
        />
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:id="@+id/question3"
        android:layout_below="@+id/textanswer1"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:fontFamily="casual"
        android:text="What is a cold planet?"
        />
    <RadioGroup
        android:id="@+id/radiongroubtwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question3"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radiobutton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question3"
            />
        <RadioButton
            android:id="@+id/radiobutton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/checkbox1"
            android:layout_marginLeft="70dp"
            android:layout_below="@+id/question3"
            />
        <RadioButton
            android:id="@+id/radiobutton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_toRightOf="@+id/checkbox2"
            android:layout_below="@+id/question3"
            />
    </RadioGroup>
    <TextView
        android:id="@+id/text2answer1"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:layout_below="@id/radiongroubtwo"
        android:text="Mars"/>
    <TextView
        android:id="@+id/text2answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="casual"
        android:layout_below="@id/radiongroubtwo"
        android:layout_marginLeft="100dp"
        android:text="Neptune"/>
    <TextView
        android:id="@+id/text2answer3"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@id/radiongroubtwo"
        android:layout_marginLeft="250dp"
        android:text="Saturn"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question4"
        android:textColor="@color/black"
        android:layout_below="@id/text2answer3"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_margin="10dp"
        android:fontFamily="casual"
        android:text="Who was the discoverer of the relativity theory "
        />
    <EditText
        android:id="@+id/edittext_edittext"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question4"
        android:fontFamily="casual"
        android:layout_centerHorizontal="true"
        android:hint="please entre the answer"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="102dp"
        android:fontFamily="casual"
        android:onClick="test"
        android:text="submit"
        android:textColor="@color/black"
        app:backgroundTint="#FFFCEC"

        />

    <Button
        android:id="@+id/button3"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="41dp"
        android:fontFamily="casual"
        android:text="After finishing Quiz Please click here"
        android:textColor="@color/black"
        app:backgroundTint="#FFFCEC" />


</RelativeLayout>